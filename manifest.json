{
    "manifest_version": 3,
    "name": "NewTab",
    "description": "Custom NewTab",
    "version": "1.0",
    "author": "Cl√©ment Songis",
    "background": {
        "service_worker": "background.js"
    },
    "action": { 
        "default_icon": "img/icon_128.png",
        "default_title": "NewTab",
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "permissions": [
        "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "128": "img/icon_128.png"
    }
}